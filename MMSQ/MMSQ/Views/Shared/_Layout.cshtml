<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title MMSQ </title>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Master Page -->
    <!-- CSS Links-->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/mati.css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <!-- Navigation Bar Appearance -->
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">

        <!-- Navigation Buttons Appearance-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" datatarget="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                ariaexpanded="false" aria-label="Toggle navigation">
        </button>

        <!-- MMSQ Navigation-->
        <div class=" MMSQ" style="margin-left:70px;">
            @Html.ActionLink("MMSQ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>

        <!-- Navigation Buttons-->
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            <ul class="nav navbar-nav mr-auto" style="margin-left:605px;">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Games Review", "Index", "Games", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Developers", "Developers", "Home", null, new { @class = "nav-link" })</a></li>
                <li>@Html.ActionLink("League Table", "LeagueTable", "Home", null, new { @class = "nav-link" })</li>
            </ul>
        </div>

        <!-- Log In/Register Buttons-->
        <div class="Sign" style="margin-right:100px;">
            <ul class="nav navbar-nav mr-auto">
                <li>@Html.ActionLink("Log in", "Login", "Account", null, new { @class = "nav-link" }) </li>
                <li>@Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })</li>
            </ul>
        </div>

    </nav>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <!-- FOOTER -->
            <footer class="foot footer-expand-sm footer-dark fixed-bottom bg-dark" style="color:darkgrey;">
                <div class="footer-left" style="text-align:center;">
                    <!-- Footer Links-->
                    <a href="/Home/About" style="color:darkgrey;"> About MMSQ </a>
                    |
                    <a href="/Home/UnderConstruction" style="color:darkgrey;"> Privacy Policy </a>
                    |
                    <a href="/Home/TermsAndConditions" style="color:darkgrey;"> Terms And Conditions </a>
                    |
                    <a href="/Home/UnderConstruction" style="color:darkgrey;"> Code of Conduct </a>
                    |
                    <a href="/Home/FAQHELP" style="color:darkgrey;"> FAQ/Help </a>
                    |
                    <a href="/Home/Contact" style="color:darkgrey;"> Contact Us </a>
                    <!-- Social Media Links-->
                    <div class="social-menu" style="text-align:center;">
                        <a href="https://www.facebook.com"><i class="fa fa-facebook" style="padding-left:10px; color:azure;"></i></a>
                        <a href="https://www.twitter.com"><i class="fa fa-twitter" style="padding-left:10px; color:azure;"></i></a>
                        <a href="https://www.instagram.com"><i class="fa fa-instagram" style="padding-left:10px; color:azure;"></i></a>
                    </div>
                    <!-- Copyright MMSQ in Footer-->
                    <p class="CompName" style="color:darkgrey; text-align:center;">&copy; @DateTime.Now.Year All Rights Reserved. </p>
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

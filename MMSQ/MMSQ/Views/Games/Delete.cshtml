@model MMSQ.Models.clsGame

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- CSS Links-->
    @Styles.Render("~/Content/MMSQ.css")
}

<h2>Delete</h2>

<div>
    <br />
    <h4>Are you sure you want to delete this game? </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            GenreID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GenreID)
        </dd>

        <dt>
            Genre Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre_Name)
        </dd>

        <dt>
            Game Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_GameTitle)
        </dd>

        <dt>
            Age Restriction
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_AgeRestriction)
        </dd>

        <dt>
            Multiplayer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Multiplayer)
        </dd>

        <dt>
            Platform
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Platform)
        </dd>

        <dt>
            Release Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_ReleaseDate)
        </dd>

        <dt>
            Score
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Score)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Description)
        </dd>

        <dt>
            Game Trailer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Trailer)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Games")
        </div>
    }
</div>

@model IEnumerable<MMSQ.Models.clsGame>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <br />

    <br><p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @*@Html.HiddenFor(model => model.GenreID)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Game_GameTitle)*@
                Game Title
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Game_AgeRestriction)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Game_Multiplayer)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Game_Platform)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Game_ReleaseDate)*@
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Game_Score)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.GenreID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_GameTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_AgeRestriction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_Multiplayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_Platform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game_Score)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GameID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.GameID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.GameID })
                </td>
            </tr>
        }

    </table>
</body>
</html>

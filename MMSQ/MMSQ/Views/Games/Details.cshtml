    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- CSS Links-->
    @Styles.Render("~/Content/MMSQ.css")
}

<h2>Details</h2>

<div>
    <br />
    <h4>Game Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Genre ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GenreID)
        </dd>

        <dt>
            Genre Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre_Name)
        </dd>

        <dt>

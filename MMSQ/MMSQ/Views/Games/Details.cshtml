        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Multiplayer)
        </dd>

        <dt>

            Platform
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Platform)
        </dd>

        <dt>
            Release Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_ReleaseDate)
        </dd>

        <dt>
            Score
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Score)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game_Description)
